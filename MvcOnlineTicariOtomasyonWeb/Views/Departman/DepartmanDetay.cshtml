@using MvcOnlineTicariOtomasyonWeb.Models.Siniflar
@model List<Personel>
@{
    ViewBag.Title = "DepartmanDetay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
<br />
<h2>Departman Detay Sayfası</h2>
<br />
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Departman Adı: @ViewBag.d</li>
</ol>
<table class="table table-hover">
    <tr>
     
        <th>Personel Ad </th>
        <th>Personel Soyad </th>
   
        <th>Satışlar</th>
    </tr>
    @foreach (var x in Model)
    {
        <tr>
          
            <td> @x.PersonelAd </td>
            <td> @x.PeresonelSoyad </td>
          
            <td><a href="/Departman/DepartmanPersonelSatis/@x.Personelid" class="btn btn-default" style="background-color:seagreen">Satışlar</a></td>



        </tr>
    }
</table>

